@font-face
  font-family 'Jost-Bold'
  src url('../fonts/Jost-Bold.woff'), url('../fonts/Jost-Bold.woff2')
  font-display swap
@font-face
  font-family 'Jost-Regular'
  src url('../fonts/Jost-Regular.woff'), url('../fonts/Jost-Regular.woff2')
  font-display swap
@font-face
  font-family 'Jost-SemiBold'
  src url('../fonts/Jost-SemiBold.woff'), url('../fonts/Jost-SemiBold.woff2')
  font-display swap

@font-face
  font-family 'Onest-Regular'
  src url('../fonts/Onest-Regular.woff'), url('../fonts/Onest-Regular.woff2')
  font-display swap

@import 'common/variables'
@import 'common/*'
@import 'components/*'

body
  margin 0 auto
  font-size 18px
  font-family 'Jost-Regular'
  font-weight 400
  line-height 120%
  color $color-black

.layout
  width 100%
  height 100%
  margin 0 auto
  display flex
  flex-direction column
  overflow-x hidden
.main
  flex 1

.wrapper
  max-width 320px
  margin 0 auto
  padding 0 6px
  width 100%
  +above($breakpoints.sm)
    max-width 750px
    padding 0 12px
  +above($breakpoints.md)
    max-width 996px
    padding 0 15px
  +above($breakpoints.xxl)
    padding 0 20px
    max-width 1220px
