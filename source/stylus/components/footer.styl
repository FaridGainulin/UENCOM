.footer
  background-color #fff

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding 15px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 25px 0 25px 0
    +above($breakpoints.md)
      padding 30px 0 30px 0
    +above($breakpoints.xxl)
      padding 37px 0 33px 0

  &__brand-block
    display: none
    color: #097FAF
    +above($breakpoints.sm)
      display: flex
      flex-direction: column
      gap: 5px

  &__line
    +above($breakpoints.sm)
      width 50px
      height: 1px
      background-color #097FAF
    +above($breakpoints.md)
      width 60px
    +above($breakpoints.xxl)
      width 79px

  &__brand-block-text
    color: #808080

  &__logo
    width 120px
    height: auto
    +above($breakpoints.sm)
      width 150px
    +above($breakpoints.md)
      width 170px
    +above($breakpoints.xxl)
      width 182px

  &__privacy
    cursor pointer
    text-decoration: underline
    color: $color-sea
    +above($breakpoints.sm)
      display: none

  &__connection
    display: flex
    align-items: center
    gap: 5px
    +above($breakpoints.sm)
      justify-content flex-end
      gap: 10px

  &__connection-icon
    width 12px
    height: 12px
    +above($breakpoints.sm)
      width 16px
      height: 16px
    +above($breakpoints.md)
      width 20px
      height: 20px
    +above($breakpoints.xxl)
      width 24px
      height: 24px
